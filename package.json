{
  "name": "awesome-visual-regression-testing",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "ladle:serve": "npx ladle serve",
    "ladle:build": "npx ladle build",
    "ladle:preview": "npx ladle preview -p 61001",
    "ladle:regression": "npm run ladle:build && concurrently --kill-others 'npm run ladle:preview' 'sleep 3 && npm run test'",
    "ladle:regression:update": "npm run ladle:build && concurrently --kill-others 'npm run ladle:preview' 'sleep 3 && npm run test:update'",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@ladle/react": "^4.1.2",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "postcss": "^8.4.47",
    "sync-fetch": "^0.5.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9"
  }
}
